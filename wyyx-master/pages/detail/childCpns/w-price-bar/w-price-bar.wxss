/* HEAD */
.price-bar-container_hd {
  width: 750rpx;
  height: 150rpx;
  background-color: #e53c3c;
  display: flex;
}

.price-section_hd {
  margin-left: 30rpx;
  width: 550rpx;
  height: 150rpx;
}

.act-text {
  margin-left: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fafafa;
}

.act-price {
  margin-top: 10rpx;
  color: #fafafa;
}

.newPrice {
  font-size: x-large;
  font-weight: 600;
}

.oldPrice {
  text-decoration: line-through;
}

.price-section_bd {
  width: 150rpx;
  height: 100%;
}

.act-special {
  line-height: 150rpx;
  font-size: x-large;
  color: #fafafa;
}

/* BODY */
/* 优惠部分 */
.price-bar-container_bd {
  width: 750rpx;
  height: 400rpx;
  background-color: #fff;
}

.desc-hd {
  width: 100%;
  height: 210rpx;
}

.discount-section {
  height: 60rpx;
  margin: 10rpx 0;
  display: flex;
}

.discount-hd {
  width: 610rpx;
  padding: 12rpx 0;
}

.discount-hd text {
  border: 2rpx solid #ea3f34;
  margin-left: 30rpx;
  font-size: small;
}

.discount-bd {
  height: 50rpx;
  width: 100rpx;
  border-radius: 30rpx;
  margin-top: 10rpx;
  text-align: center;
  background-color: #2e2539;

}
.discount-bd text {
  line-height: 50rpx;
  color: white;
}

/* 标题部分 */
.title-section {
  width: 750rpx;
  height: 140rpx;
}

.brand-seaction {
  margin-top: 10rpx;
  height: 40rpx;
  display: flex;
}

.market {
  width: 70rpx;
  height: 40rpx;
  margin-left: 20rpx;
  border-radius: 20rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #dd4643;
}

.reson-section {
  display: flex;
  margin-top: 8rpx;
  font-size: small;
}

/* 详情部分 */
.desc-bd {
  width: 750rpx;
  box-sizing: border-box;
  border: 20rpx white solid;
  background-color: #fafafa;
}

.content-section {
  width: 690rpx;
  font-size: small;
  margin: 10rpx;
}